<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.PostDetailsFragment">

    <include
        android:id="@+id/itemPostDetails"
        layout="@layout/post_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="35dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEditPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit post"
            android:textAllCaps="false"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDownloadPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download post"
            android:textAllCaps="false"
            android:backgroundTint="@color/bright_blue" />

    </LinearLayout>

</LinearLayout>